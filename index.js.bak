    console.log(`ğŸ” Äang káº¿t ná»‘i tá»›i ${server.user}@${server.host}...`);
    // DÃ¹ng sshpass + spawn Ä‘á»ƒ ssh tá»± Ä‘á»™ng
    const sshPassProc = spawn('sshpass', [
